{
    "mero": {
        "mero-kernel": {
            "group": "io",
            "provider": {
                "name": "systemd:mero-kernel",
                "service": "mero-kernel",
                "interval": "10s",
                "timeouts": [ "10s", "10s", "10s" ]
            },
            "dependencies": {
                "predecessors" : ["lnet-c1", "lnet-c2"],
                "colocation" : [],
                "relation" : []
            },
            "ha": {
                "mode": "active_active",
                "clones" : {
                    "active": [ 1, 2]
                },
                "location": {
                    "${HA_nodes_eosnode1}": "INFINITY",
                    "${HA_nodes_eosnode2}": "INFINITY"
                }
            }
        },
        "mero-confd-c1": {
            "group": "io",
            "provider": {
                "name": "systemd:m0d@${HA_io_mero_meroconfc1}",
                "service": "m0d@${HA_io_mero_meroconfc1}",
                "interval": "30s",
                "timeouts": [ "600s", "600s", "600s" ]
            },
            "dependencies": {
                "predecessors" : ["lnet-c1", "lnet-c2"],
                "colocation" : ["lnet-c1"],
                "relation" : []
            },
            "ha": {
                "mode": "active_passive",
                "location": {
                    "${HA_nodes_eosnode1}": "INFINITY",
                    "${HA_nodes_eosnode2}": "1000"
                }
            }
        },
        "mero-confd-c2": {
            "group": "io",
            "provider": {
                "name": "systemd:m0d@${HA_io_mero_meroconfc2}",
                "service": "m0d",
                "interval": "30s",
                "timeouts": [ "600s", "600s", "600s" ]
            },
            "dependencies": {
                "predecessors" : ["lnet-c1", "lnet-c2"],
                "colocation" : ["lnet-c2"],
                "relation" : []
            },
            "ha": {
                "mode": "active_passive",
                "location": {
                    "${HA_nodes_eosnode1}": "1000",
                    "${HA_nodes_eosnode2}": "INFINITY"
                }
            }
        },
        "mero-ios-c1": {
            "group": "io",
            "provider": {
                "name": "systemd:m0d@${HA_io_mero_meroiosc1}",
                "service": "mero_ios_c1",
                "interval": "600s",
                "timeouts": [ "600s", "600s", "600s" ]
            },
            "dependencies": {
                "predecessors" : ["mero-confd-c1", "mero-confd-c2"],
                "colocation" : ["mero-confd-c1"],
                "relation" : []
            },
            "ha": {
                "mode": "active_passive",
                "location": {
                    "${HA_nodes_eosnode1}": "INFINITY",
                    "${HA_nodes_eosnode2}": "1000"
                }
            }
        },
        "mero-ios-c2": {
            "group": "io",
            "provider": {
                "name": "systemd:m0d@${HA_io_mero_meroiosc2}",
                "service": "mero_ios_c2",
                "interval": "600s",
                "timeouts": [ "600s", "600s", "600s" ]
            },
            "dependencies": {
                "predecessors" : ["mero-confd-c1", "mero-confd-c2"],
                "colocation" : ["mero-confd-c2"],
                "relation" : []
            },
            "ha": {
                "mode": "active_passive",
                "location": {
                    "${HA_nodes_eosnode1}": "1000",
                    "${HA_nodes_eosnode2}": "INFINITY"
                }
            }
        }
    }
}
